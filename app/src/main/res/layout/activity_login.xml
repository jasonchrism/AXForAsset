<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login to continue using the app"
        android:layout_marginLeft="26dp"
        android:textSize="16sp"
        android:textColor="@color/textgray"
        android:fontFamily="@font/poppins_semibold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_semibold"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="14dp"
        android:background="@drawable/edit_text_border"
        android:inputType="text"
        android:hint="Your username"
        android:textColorHint="@color/textgray"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvUsernameError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Username must be filled"
        android:textSize="10sp"
        android:layout_marginLeft="36dp"
        android:textColor="@color/red"
        android:fontFamily="@font/poppins"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_semibold"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="14dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/poppins"
        android:inputType="textPassword"
        android:hint="Your password"
        android:textColorHint="@color/textgray"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Password must be filled"
        android:textSize="10sp"
        android:layout_marginLeft="36dp"
        android:textColor="@color/red"
        android:fontFamily="@font/poppins"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/textgray"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:textAlignment="textEnd"
        android:layout_marginRight="26dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="20dp"
        android:text="Login"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:textSize="13sp"
        android:layout_marginHorizontal="24dp" />

    <LinearLayout
        android:id="@+id/linLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="28dp">

        <View
            android:id="@+id/vLeft"
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:background="@color/textgray" />

        <TextView
            android:id="@+id/tvOrLoginWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Login with"
            android:textSize="12sp"
            android:textColor="@color/textgray"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/poppins_semibold" />

        <View
            android:id="@+id/vRight"
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="20dp"
            android:background="@color/textgray" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp">

        <ImageView
            android:id="@+id/ivFacebook"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:padding="6dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/image_button_border"/>

        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@drawable/google"
            android:padding="6dp"
            android:layout_centerInParent="true"
            android:background="@drawable/image_button_border"/>

        <ImageView
            android:id="@+id/ivApple"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@drawable/apple"
            android:padding="6dp"
            android:layout_marginRight="26dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/image_button_border"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Don't have an account? Register"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/black"/>

</LinearLayout>